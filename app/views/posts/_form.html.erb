<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.label :cateogories %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, @post.categories.build do |categories_attributes| %>
        <%= categories_attributes.text_field :name %>
    <% end %>
    <%= f.submit %>
<% end %>