<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :content %><br>
  <%= f.text_field :content %><br>

  <%= f.label :category %><br>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %><br>

  <%= f.fields_for :categories do |category_fields| %>
    <% category_fields.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
