
<%= form_for @post do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label "Content:" %>
  <%= f.text_field :content %>
  <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.fields_for :categories, @category do |category_field| %>
    <%= category_field.label "New Category:" %>
    <%= category_field.text_field :name %>
    <br>
  <% end %>

  <%= f.submit %>
<% end %>
