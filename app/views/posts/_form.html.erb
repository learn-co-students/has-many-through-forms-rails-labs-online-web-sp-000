<h1>New Post</h1>

<%= form_for(@post) do |f| %>

  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <br/>
  <br/>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <br/>
  <br/>

  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <p>
      <%= b.label %>
      <%= b.check_box %>
      </p>
  <% end %>


  <%= f.fields_for :categories do |category_builder| %>
    <%= category_builder.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>




