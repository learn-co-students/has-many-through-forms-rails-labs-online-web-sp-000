<h1>New Post</h1>

<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <p>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <p>
  Categories:<br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <p>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    New Category: <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
