<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>

    <%= f.label :content %>
    <%= f.text_field :content %>
    <br><br>
    
    <%= f.label "Categories" %>    
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
    <br>
    <%= f.fields_for :categories do |cat_fields| %>
        <%= cat_fields.label :name, "Add New Category: " %>
        <%= cat_fields.text_field :name %>
    <% end %>
    <br><br>

    <%= f.submit %>
<% end %>
<hr>
