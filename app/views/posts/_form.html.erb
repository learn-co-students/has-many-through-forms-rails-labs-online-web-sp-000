<%=form_for @post do |f| %>
  <%=f.label :Tiltle%>
  <%=f.text_field :title%><br><br>
  <%=f.label :Content%>
  <%=f.text_area :content%><br><br>
  <%=f.collection_check_boxes :category_ids, Category.all, :id, :name%><br><br>

  <%= f.fields_for :categories do |c| %>
    <%=c.label :Category%>
    <%=c.text_field :name%>
    <% end %><br><br>
  <%=f.submit%>
<%end%>
