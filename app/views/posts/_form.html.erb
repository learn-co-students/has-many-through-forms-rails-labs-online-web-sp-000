<%= form_for(@post) do |post| %>
    <%= post.label :title %>
    <%= post.text_field :title %><br />

    <%= post.label "Content" %>
    <%= post.text_area :content %>

    <%= post.collection_check_boxes :category_ids, Category.all, :id, :name %>

    <%= post.fields_for :categories, @post.categories.build do |categories_fields| %>
        <%= categories_fields.label :name, "Name:"%>
        <%= categories_fields.text_field :name %>
    <% end %>

    <%= post.submit %>
<% end %>
