<%=form_for @post do |f| %>
    <%= f.label 'Title:' %>
    <%= f.text_field :title %><br>
    <%= f.label 'Categories:' %> <br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    <%= f.fields_for :categories, post.categories.build do |category_field| %>
        <%= category_field.label 'New Category:' %>
        <%= category_field.text_field :name %>
    <% end %>
    <br>
    <%= f.label 'Content:' %> <br>
    <%= f.text_area :content %><br>
    <%= f.submit %>

<% end %>
