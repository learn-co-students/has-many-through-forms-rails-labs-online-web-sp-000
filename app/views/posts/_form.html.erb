<h1>Create a new Post</h1>
<%=form_for @post do |f| %>
  <%=f.label :title%>
  <%=f.text_field :title%>
  <%=f.label :content%>
  <%=f.text_field :content%>
  <%=f.collection_check_boxes :category_ids, Category.all, :id, :name%>

  <%=f.fields_for :categories, @category do |category_builder|%>
    <%=category_builder.text_field :name%>
  <%end%>

  <%=f.submit%>
<%end%>



