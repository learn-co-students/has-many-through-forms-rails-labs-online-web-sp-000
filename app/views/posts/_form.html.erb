<%= form_for @post do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %></br>

  <%= f.label :content %>
  <%= f.text_area :content %></br>

  <%= f.label "Choose an exisiting Category" %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %></br>

  <%= f.fields_for :categories_attributes do |cat| %>
    <%= cat.label :name, "Or Create a New Category" %>
    <%= cat.text_field :name, id: "post_categories_attributes_0_name", value: "" %>
  <% end %>

  </br>
  <%= f.submit %>
<% end %>
