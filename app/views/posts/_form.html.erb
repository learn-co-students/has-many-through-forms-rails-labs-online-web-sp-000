<h1>
    <strong>New Post</strong>
</h1>
<%= form_for @post do | f | %>
    <p>
        Title: <%= f.text_field :title %>
    </p>
    <p>
        Content: 
        <%= f.text_field :content %>
    </p>
    <br>
    <h4>Categories</h4><br>
    <p>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </p>
    <%= f.fields_for :categories, post.categories.build do | cat_field | %>
        <%= cat_field.text_field :name %>
    <% end %>
    <%= f.submit %>
<% end %>