<h1>Create a new post</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>
  <%= f.label :content %><br>
  <%= f.text_area(:content, size: '50x10') %><br><br>
  <%= f.label "Select a Category" %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.fields_for :categories, post.categories.build do |cat| %>
    <%= cat.label "or create new category" %><br>
    <%= cat.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
