<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :content %>
  <br>
  <%= f.text_area :content %>
  <br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.fields_for :categories, @post.categories.build do |c| %>
    <%= c.label :name, 'New Category' %>
    <%= c.text_field :name %>
    <br>
  <% end %>
  <br>

  <%= f.submit %>
<% end %>