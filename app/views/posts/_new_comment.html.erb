<%= form_for @post do |f| %>
  <%= f.fields_for :comment do |c| %>
    <h3><%= c.label 'New Comment' %> </h3>
    
    <%= c.label 'Select a user:' %>
    <%= c.collection_select :user_id, User.all, :id, :username, include_blank: true %> 
    <br><br>

    <%= c.label 'Or create a new user:' %>
    <%= c.fields_for :users, @post.users.build do |u| %>
      <%= u.text_field :username %>
    <% end %>
    <br><br>

    <%= c.label 'Your comment:' %> <br>
    <%= c.text_area :content %>
    <br>
  <% end %>
  <%= f.submit 'Create Comment' %>  
<% end %>
