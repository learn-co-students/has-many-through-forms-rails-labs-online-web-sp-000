<h1> Post <%= @post.title %></h1>

<p>
  <h3>Content :</h3><%= @post.content %>
</p>

<ul>
  Categories : <%= @post.categories.each do |c| %>
  <li><%= c.name %></li>
  <% end %>
</ul>

<ul>
  Users : <%= @post.users.uniq.each do |u| %>
  <li><%= link_to u.username, user_path(u) %></li>
  <% end %>
</ul>

<ul>
  Comments : <%= @post.comments.each do |c| %>
  <li><%= c.user.username %> says: <%= c.content %></li>
  <% end %>
</ul>


<h3>Add Comment</h3>
<%= form_for(@post.comments.build) do |f| %>
<p>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.collection_select :user_id, User.all, :id, :username %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.fields_for :user, User.new do |users_fields| %>
  <%= users_fields.label :username %>
  <%= users_fields.text_field :username %>
  <% end %>
</p>
<%= f.submit %>
<% end %>
