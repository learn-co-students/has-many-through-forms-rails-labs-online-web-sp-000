<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<h3>Categories</h3>
<ul>
    <% @post.categories.each do |c| %>
        <li><%= c.name %></li>
    <% end %>
</ul>

<h3>Comments</h3>
<ul>
    <% @post.comments.each do |c| %>
        <li>
        <% if c.user %>
            <%= c.user.username %> says: <%= c.content %>
        <% end %>
        </li>
    <% end %>
</ul>

<h3>Users who have commented on <%= @post.title %></h3>
<ul>
    <% @post.users.distinct.each do |u| %>
        <%= link_to u.username, user_path(u) %>
    <% end %>
</ul>
<br>

<%= render 'comment-form' %>
