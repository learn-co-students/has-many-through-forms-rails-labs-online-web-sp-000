<h1>Title: <%= @post.title %></h1>

<h2>Content: <%= @post.content %></h2>

<h2>Categories: 
<% @post.categories.each do |cat| %>
    <%= cat.name%><br>
<% end %></h2>

<% @post.comments.each do |comment| %>
    <%= comment.user.username %> says: <%= comment.content%>
<% end %>    
    
<% @post.users.distinct.map do |user| %>
    <%= link_to user.username, user_path(user) %>
<% end %>
        
<h3>Add a comment</h3>

<%= form_for @comment do |f| %>
    <%= f.label :content %>
    <%= f.text_field :content %><br><br>

    <!--<%= f.label :post %>
    <%= f.collection_select :post_id, Post.all, :id, :title %><br>-->

    <%= f.hidden_field :post_id, value: @post.id %>

    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :username, include_blank: "Select a User"  %><br><br>

    <%= f.label :username %>
    <%= f.fields_for :user, @comment.build_user do |user_fields| %>
        <%= user_fields.text_field :username %><br>
    <% end %><br><br>

    <%= f.submit %>
<% end %>
