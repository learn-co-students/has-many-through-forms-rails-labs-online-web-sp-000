Post Title: <%= @post.title %><br>
<p>Post Content: <%= @post.content %></p>
Categories:
<ul>
  <% @post.categories.each do |catg| %>
   <li> <%= catg.name %> </li>
  <% end %>
</ul>
Comments:
<ul>
  <% @post.comments.each do |comt| %>
   <li><%= comt.user.username%> says: <%= comt.content %> </li> 
  <% end %>
</ul>
Commentators:
<ul>
  <% @post.users.uniq.each do |user| %>
   <li> <%= link_to user.username, user_path(user) %> </li>
  <% end %>
</ul>

<h1>Add A New Comment:</h1>
<%= form_for @post.comments.build do |f| %>
  <%= f.label "Content" %>
  <%= f.text_field :content %><br>
  <%= f.label "Select a user" %>
  <%= f.collection_select :user_id, User.all, :id, :username, :prompt => "Please Select a user" %><br>
  <%= f.label "Or create a new user" %>
  <%= f.fields_for :user, User.new do |attributes| %>
    <%= attributes.text_field :username%>
  <% end %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <br>
  <%= f.submit %>
<% end %>




