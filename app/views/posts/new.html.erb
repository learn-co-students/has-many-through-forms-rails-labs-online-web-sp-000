<%= render 'form', post: Post.new %>
<h1>New Post</h1>
<%= form_for @post do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br><br>
  <%= f.label :content %> <br>
  <%= f.text_area :content %> <br><br>

Categories: <br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
<br><br>
  
  <%= f.label "New Category: " %>
  <%= text_field 'new_category', 'category[name]' %>  <br><br>
  <%= f.submit %>
<% end %>