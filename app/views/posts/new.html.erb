<%= render 'form', post: Post.new %>

<%= form_for(@post) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title%>
        <br / >
        <br / >
    <%= f.label :content %>
    <%= f.text_area :content %>
        <br / >
        <br / >
    <%= f.label 'Category' %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name, include_blank: 'Any'%>
    <% end %>
        <br / >
        <br / >
    <%= f.submit %>

<% end %>