<%= form_for @post do |f| %>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %><br><br>

    <%= f.label "Content" %><br>
    <%= f.text_area :content, size: '50x10' %><br><br>

    <%= f.label "Select Categories" %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

    <%= f.label "Add New Category" %><br>
    <%= f.fields_for :categories, @post.categories.build do |category| %>
        <%= category.text_field :name %>
    <% end %>

    <%= f.submit %>
<% end %>