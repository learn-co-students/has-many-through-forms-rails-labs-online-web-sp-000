<h1>New Form Comment</h1>
<%= form_for @comment do |f| %>
  <%= f.label "Content" %>
  <%= f.text_field :content %><br>
  <%= f.label "Select a user" %>
  <%= f.collection_select :user, User.all, :id, :username %><br>
  <%= f.label "Or create a new one" %>
  <%= f.text_field :users_attributes_username %>
  <%= f.hidden_field :post_id, value: @comment.post.id %>
  <%= f.hidden_field :user_id, value: @comment.user.id %>
  <br>
  <%= f.submit %>
<% end %>
