<%= form_for @comment do |f| %>
  <%= f.label "Content" %>
  <%= f.text_field :content %><br>
  <%= f.label "Select a user" %>
  <%= f.collection_select :user, User.all, :id, :username %><br>
  <%= f.label "Or create a new one" %>
  <%= f.text_field :users_attributes_username %>
  <br>
  
  <%= f.submit %>
<% end %>
